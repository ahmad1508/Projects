    <%- include('../partials/head.ejs') %>
    <body>
    <%- include('../partials/nav.ejs') %>
    <div class="details content text-6xl">
        <h2><%= blog.title %></h2>
        <div class="content">
            <p><%= blog.body %></p>
        </div>
        
        <br>
        <br>
        <div class ="btn">
            <a href="/blogs">&#11160; Return</a>
            <a class="delete" data-doc="<%=blog._id%>"><img src="/trashcan.svg" alt="delete icon"></a>
        </div>
    
    </div>
    <%- include('../partials/footer.ejs') %>
    <script>
        const trashcan = document.querySelector("a.delete");

        trashcan.addEventListener("click",(e)=>{
            const endpoint = `/blogs/${trashcan.dataset.doc}`;
            //sends a request to the server to delete data
            
            fetch(endpoint,{
                method:'DELETE'
                //takes the json response and pass it into a javascript object and get acces in data variable
            }).then((response)=>response.json())
            .then((data)=>window.location.href = data.redirect).catch((err)=>console.log(err))
        })
    </script>
    </body>
    </html>
